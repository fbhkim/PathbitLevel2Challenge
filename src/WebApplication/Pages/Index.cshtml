@page
@model IndexModel
<h2>Cadastro - Etapa 1: Dados Básicos</h2>
<form method="post" asp-page="/Step2">
  <div>
    <label>Nome</label>
    <input type="text" asp-for="Customer.BasicData.Name" required />
    <span asp-validation-for="Customer.BasicData.Name"></span>
  </div>
  <div>
    <label>Data de Nascimento</label>
    <input type="date" asp-for="Customer.BasicData.BirthDate" required />
    <span asp-validation-for="Customer.BasicData.BirthDate"></span>
  </div>
  <div>
    <label>CPF</label>
    <input type="text" asp-for="Customer.BasicData.CPF" required />
    <span asp-validation-for="Customer.BasicData.CPF"></span>
  </div>
  <div>
    <label>Email</label>
    <input type="email" asp-for="Customer.BasicData.Email" required />
    <span asp-validation-for="Customer.BasicData.Email"></span>
  </div>
  <div>
    <label>Telefone</label>
    <input type="text" asp-for="Customer.BasicData.Phone" required />
    <span asp-validation-for="Customer.BasicData.Phone"></span>
  </div>
  <button type="submit">Próximo</button>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
